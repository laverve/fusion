{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "packages": {
        ".": {
            "changelog-path": "CHANGELOG.md",
            "release-type": "node",
            "skip-github-pull-request": true,
            "skip-github-release": true,
            "skip-snapshot": true
        },
        "fusion": {
            "changelog-path": "CHANGELOG.md",
            "release-type": "node",
            "separate-pull-requests": true
        },
        "games/maze": {
            "changelog-path": "CHANGELOG.md",
            "release-type": "node",
            "skip-github-pull-request": true,
            "skip-github-release": true,
            "skip-snapshot": true
        },
        "games/word-search": {
            "changelog-path": "CHANGELOG.md",
            "release-type": "node",
            "skip-github-pull-request": true,
            "skip-github-release": true,
            "skip-snapshot": true
        },
        "storybook": {
            "changelog-path": "CHANGELOG.md",
            "release-type": "node",
            "skip-github-pull-request": true,
            "skip-github-release": true,
            "skip-snapshot": true
        }
    },
    "plugins": [
        {
            "type": "node-workspace",
            "updatePeerDependencies": true
        }
    ]
}
